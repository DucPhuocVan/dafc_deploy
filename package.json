{
  "name": "dafc-otb-monorepo",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@dafc/web",
    "dev:api": "turbo run dev --filter=@dafc/api",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:unit": "turbo run test --filter=@dafc/api --filter=@dafc/web",
    "test:unit:api": "pnpm --filter @dafc/api run test",
    "test:unit:web": "pnpm --filter @dafc/web run test",
    "test:cov": "pnpm --filter @dafc/api run test:cov && pnpm --filter @dafc/web run test --coverage",
    "test:integration": "pnpm --filter @dafc/api run test:e2e",
    "test:stress": "pnpm --filter @dafc/api run test:stress",
    "test:stress:comprehensive": "pnpm --filter @dafc/api exec ts-node test/stress/comprehensive-stress.ts comprehensive",
    "test:stress:spike": "pnpm --filter @dafc/api exec ts-node test/stress/comprehensive-stress.ts spike",
    "test:stress:soak": "pnpm --filter @dafc/api exec ts-node test/stress/comprehensive-stress.ts soak",
    "test:load": "pnpm --filter @dafc/api run test:load",
    "test:security": "pnpm --filter @dafc/api run test -- --testPathPattern=security",
    "test:e2e": "pnpm --filter @dafc/web run test:e2e",
    "test:e2e:ui": "pnpm --filter @dafc/web run test:e2e:ui",
    "test:e2e:debug": "pnpm --filter @dafc/web run test:e2e:debug",
    "test:e2e:headed": "pnpm --filter @dafc/web exec playwright test --headed",
    "test:e2e:report": "pnpm --filter @dafc/web run test:e2e:report",
    "test:all": "pnpm test:unit && pnpm test:integration && pnpm test:e2e",
    "test:ci": "pnpm test:unit && pnpm test:security && pnpm test:e2e",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:generate": "turbo run db:generate --filter=@dafc/database",
    "db:push": "turbo run db:push --filter=@dafc/database",
    "db:seed": "turbo run db:seed --filter=@dafc/database",
    "db:studio": "pnpm --filter @dafc/database exec prisma studio"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  }
}
